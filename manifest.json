{
    "manifest_version": 3,
    "name": "Read Aloud",
    "version": "1.0.0",
    "description": "An accessibility extension that reads aloud any selected text on a webpage.",
    "permissions": ["activeTab", "storage", "tts", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  